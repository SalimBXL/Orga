<% session[:page_aide] = "locations_services" %>

<div class="page-header">
    <h1>
        <span class="label label-primary">
            <i class="material-icons">business</i>
            <%= I18n.t("services.index.titre").upcase %>
        </span>
    </h1>
</div>

<div class="container">
    <p>
        <% if user_signed_in? && is_super_admin? %>
        <%= link_to '<i class="material-icons">add</i> '.html_safe, 
            new_service_path,
            class: "btn btn-success btn-xs" %>
        <% end %>
    </p>
    
    <div class="row" id="services">
        <%= render 'services' %>
    </div>

    <p>
        <% if user_signed_in? && is_super_admin? %>
        <%= link_to '<i class="material-icons">add</i> '.html_safe, 
            new_service_path,
            class: "btn btn-success btn-xs" %>
        <% end %>
    </p>
</div>
