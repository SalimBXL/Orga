<div class="col-sm-4" id="service_<%= service.id %>">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3><i class="material-icons">business</i> <%= service.nom %></h3>
        </div>
        <div class="panel-body">
            <p>
                <i class="material-icons">location_city</i> <%= service.lieu.nom %><br>
            </p>
            <p>
                <%= service.description %>
            </p>
        </div>
        <div class="panel-footer">
        <% if user_signed_in? && is_super_admin? %>
            <div class="btn-group">
                <%= link_to '<span data-toggle="tooltip">
                    <i class="material-icons">edit</i></span>'.html_safe, 
                    edit_service_path(service),
                    class: "btn btn-warning btn-xs" %>
                <%= link_to '<span data-toggle="tooltip" >
                    <i class="material-icons">close</i>'.html_safe, 
                    service_path(service),
                    method: :delete,
                    remote: true,
                    data: { confirm: "Delete #{service.nom} ?" },
                    class: "btn btn-danger btn-xs" %>
                <%= link_to '<span data-toggle="tooltip" >
                    <i class="material-icons">location_city</i>'.html_safe, 
                    lieu_path(service.lieu),
                    class: "btn btn-info btn-xs" %>
                </span>
            </div>
            <% end %>
        </div>
    </div>
</div>
