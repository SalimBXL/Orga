<%= form_with model: @konfiguration, local: true do |form| %>

    <% if @konfiguration.errors.any? %>
        <strong>WARNING</strong>
        <ul>
            <% @konfiguration.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    

    <!-- Key -->
    <p>
        <%= form.label I18n.t("konfigurations.new.key") %><br>
        <%= form.text_field :key, size: 50 %>
    </p>

    <!-- Value -->
    <p>
        <%= form.label I18n.t("konfigurations.new.value") %><br>
        <%= form.text_field :value, size: 50 %>
    </p>


    <!-- Description -->
    <p>
        <%= form.label I18n.t("konfigurations.new.description") %><br>
        <%= form.text_field :description, size: 50 %>
    </p>



    <p>
        <%= form.submit class: "btn btn-primary" %>
    </p>
<% end %>