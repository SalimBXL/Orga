                <% end %>
                <% if ajout.work4 %>
                    <li><%= @works.where(id: ajout.work4).first.code %></li>
                <% end %>
                <% if ajout.work5 %>
                    <li><%= @works.where(id: ajout.work5).first.code %></li>
                <% end %>
            </ul>
        </div>
        <div class="col-sm-3">
            <div class="btn-group">
            <%= link_to "Annuler", home_path, class: "btn btn-danger" %>
