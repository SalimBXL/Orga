<table class="table table-condensed">
    <thead>
      <tr>
        <th>Utilisateur</th>
        <th>Lundi</th><th>Mardi</th><th>Mercredi</th>
        <th>jeudi</th><th>Vendredi</th>
    </tr>
    </thead>
    <tbody>
        <% @semaines.each do |semaine| %>
        <tr>
            <td>
                <%= semaine.utilisateur.prenom_nom %>
            </td>
            <% 5.times do |n| %>
                <% n += 1 %>
                <td>
                    <% semaine.jobs.where(numero_jour: n).each do |job| %>
                        <% job.working_lists.each do |wl| %>
                            <span class="badge">
                                <%= wl.work.code %>
                            </span>
                        <% end %>
                    <% end %>
                </td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

<h1>Dernier ajout</h1>
<% @ajouts.each do |ajout| %>
    <div class="row">
        <div class="col-sm-2">
            <% utilisateur = Utilisateur.find(ajout.utilisateur) %>
            <strong>Utilisateur</strong>
            <p><%= utilisateur.prenom_nom %></p>
        </div>
        <div class="col-sm-2">
            <strong>Date Lundi</strong>
            <p><%= ajout.date_lundi %></p>
            <strong>NumÃ©ro du jour</strong>
            <p><%= ajout.numero_jour %></p>
        </div>
        <div class="col-sm-2">
            <strong>Works</strong>
            <ul>
                <% if ajout.work1 %>
                    <li><%= @works.where(id: ajout.work1).first.code %></li>
                <% end %>
                <% if ajout.work2 %>
                    <li><%= @works.where(id: ajout.work2).first.code %></li>
                <% end %>
