<tr>
    <th> </th>
    <% i = 0 %>
    <% while i < nombre_jours %>
        <% if (@date+i.day).month != tmp_last_month %>
            <% tmp_last_month = (@date+i.day).month %>
            <th colspan="<%= ((@date+i.day).end_of_month.mday - (@date+i.day).mday + 1) %>">
                <%= (@date+i.day).strftime("%b") %>
            </th>
        <% end %>
        <% i+= 1 %>
    <% end %>
</tr>