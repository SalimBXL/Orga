            <tr class="success">
                <td style="text-align:center">
                    <p>
                        <!-- TODAY -->
                        <%= link_to '<i class="material-icons">today</i>'.html_safe, 
                            agendas_jour_path,
                            class: "btn btn-success btn-xs"
                        %>
                        <h4>Aujourd'hui</h4>
                    </p>
                    <p>
                        <!-- THIS WEEK -->
                        <%= link_to '<i class="material-icons">date_range</i>'.html_safe, 
                            agendas_semaine_path,
                            class: "btn btn-success btn-xs" 
                        %>
                        <h4>Cette semaine</h4>
                    </p>
                </td>
                <td style="text-align:center">
                    <p>
                        <!-- ABSENCES -->
                        <%= link_to '<i class="material-icons">healing</i>'.html_safe, 
