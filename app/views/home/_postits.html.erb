<div class="container-fluid">
    <div class="row">
        <% @postits.each do |postit| %>
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">

                <% bg ||= "warning" %>
                <% bg = "danger" if postit.is_private %>
                <% bg = "default" if postit.level == 1 %>
                
                <div class="panel panel-<%= bg %>">
                    <div class="panel-heading">
                        <%= postit.title %>
                        <% if postit.level > 1 %>
                            <span class="label label-<%= postit.level_color %>">*</span>
                        <% end %>
                        <%= postit.body %>
                        <small>(<%= postit.utilisateur.prenom %>)</small>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>