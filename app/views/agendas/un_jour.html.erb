<h1>
    <span class="label label-primary">
        <i class="material-icons">today</i>
        <%= "Aujourd'hui".upcase %>
    </span>
</h1>

<div class="row">

    <div class="col-xs-8 col-sm-9 col-md-8">
        <span class="badge"><em><%= @date_jour %></em></span>
    </div>

    <div class="col-xs-8 col-sm-9 col-md-2">
         
        <div class="dropdown">
            <button class="btn btn-info btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
            <% if @service_id.nil? %>
                <% @service_id = @services.first[0] %>
            <% end %>
            <%= "Service: #{@services[@service_id]}" %>
            <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <% @services.each do |key, value| %>
                    <li><a href="#"><%= value %></a></li>
                <% end %>
            </ul>
        </div>
    </div>

    <div class="col-xs-4 col-sm-3 col-md-2">
        <%= link_to '<i class="material-icons">chevron_left</i>'.html_safe,
        agendas_jour_path(jour: @date_jour-1),
        class: "btn btn-info btn-xs" %>

        <%= link_to '<i class="material-icons">radio_button_unchecked</i>'.html_safe,
        agendas_jour_path, 
        class: "btn btn-info btn-xs" %>

        <%= link_to '<i class="material-icons">chevron_right</i>'.html_safe,
        agendas_jour_path(jour: @date_jour+1), 
        class: "btn btn-info btn-xs" %>
    </div>
</div>

<div class="container">
    <p>
        <span class="label label-primary">Prestations 1</span>
        <span class="label label-info">Prestations 2</span>
        <span class="label label-success">Cong√©s</span>
        <span class="label label-warning">Absences</span>
    </p>
    <%= render 'grille_un_jour' %>
</div>
