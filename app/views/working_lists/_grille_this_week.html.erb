
<div class="row grille">
    <table class="table-condensed table table-bordered table-striped table-responsive">
        <thead>
        <tr align=center>
            <th>Utilisateurs</th>
            <% 5.times do |n| %>
                <th><%= nom_jour(n+1) %></th>
            <% end %>
        </tr>
        </thead>
        
        <tbody>
            <% @semaines.each do |semaine| %>
                <tr align=center>
                    <td>
                        <%= prenom_nom(semaine.utilisateur) %>
                    </td>
                    <% 5.times do |n| %>
                        <% couleur_cellule = (Date.today.cwday==(n+1)) ? "warning" : "default" %>
                        <td class=<%= "#{couleur_cellule}" %>>
                            <% semaine.jobs.where(numero_jour: "#{n+1}").each do |job| %>
                                <% job.working_lists.each do |working_list| %>
                                    <span class="label label-primary tab-cell"
                                            data-toggle="tooltip" 
                                            title="<%= working_list.work.nom %>">
                                        <%= "#{working_list.work.code}" %>
                                    </span>
                                <% end %>
                            <% end %>
                        </td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<br>