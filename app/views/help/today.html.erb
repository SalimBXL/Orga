<%= render 'titre' %>

<% unless user_signed_in? %>
    <%= render "sommaire" %>
<% else %>
<div class="container">

    <h2><%= I18n.t("help.today.titre").capitalize %></h2>

    <!-- Date -->
    <article>
        <h3><span class="label label-info"><%= I18n.t("help.today.titre0").capitalize %></span></h3>
        <p><%= I18n.t("help.today.article0") %></p>
    </article>

    <!-- Navigation -->
    <article>
        <h3><span class="label label-success"><%= I18n.t("help.today.titre1").capitalize %></span></h3>
        <p><%= I18n.t("help.today.article1-1") %></p>
        <p>
            <%= I18n.t("help.today.article1-2") %><br>
            <%= I18n.t("help.today.article1-3") %>
        </p>
    </article>

    <!-- Users -->
    <article>
        <h3><span class="label label-default"><%= I18n.t("help.today.titre2").capitalize %></span></h3>
        <p><%= I18n.t("help.today.article2-1") %></p>
    </article>
    
    <article>
        <h3>More</h3>
        <p><%= I18n.t("help.login.article2") %></p>
        <address>
            <ul>
            <% @administrators.each do |administrator| %>
                <li>
                    - <%= administrator.prenom_nom %> : 
                    <a href="mailto:<%= administrator.email %>"><%= administrator.email %></a>
                </li>
            <% end %>
            </ul>
        </address>
    </article>


</div>
<% end %>
