<tr id="type_absence_<%= type_absence.id %>">
    <td><%= type_absence.code %></td>
    <td><%= type_absence.nom %></td>
    <td><%= type_absence.description %></td>
    <td>
        <%= link_to " [Show] ", type_absence_path(type_absence) %>
        <%= link_to " [Edit] ", edit_type_absence_path(type_absence) %>
        <%= link_to " [Delete] ", type_absence_path(type_absence), 
            method: :delete,
            remote: true,
            data: { confirm: "Delete #{type_absence.nom} ?" } %>
    </td>
</tr>