<%= form_with model: @type_absence, local: true do |form| %>

    <% if @type_absence.errors.any? %>
        <strong>WARNING</strong>
        <ul>
            <% @type_absence.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <!-- Nom -->
    <p>
        <%= form.label :nom %><br>
        <%= form.text_field :nom %>
    </p>

    <!-- Description -->
    <p>
        <%= form.label :description %><br>
        <%= form.text_field :description %>
    </p>
    <p>
        <%= form.submit class: "btn btn-primary" %>
    </p>
<% end %>