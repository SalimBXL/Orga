<%= form_with model: @semaine, local: true do |form| %>

    <% if @semaine.errors.any? %>
        <strong>WARNING</strong>
        <ul>
            <% @semaine.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <!-- Numéro de semaine -->
    

    <!-- Date lundi -->
    <p>
        <%= form.label :date_lundi %><br>
        <%= form.date_field :date_lundi %>
    </p>

    <!-- Utilisateur -->
    <p>
        <%= form.label :utilisateur_id %><br>
        <%= form.select(:utilisateurs, @utilisateurs.collect {|p| [ "[#{@groupes.where(id: p.groupe_id).first.nom}] #{p.prenom_nom}", p.id ] }, 
                                           { }, 
                                           { :multiple => true, :size => 10 }) %>
    </p>

    <!-- Note -->
    <p>
        <%= form.label :note %><br>
        <%= form.text_field :note %>
    </p>
    <p>
        <% if Utilisateur.all.empty? %>
            <span data-toggle="tooltip" title="Utilisateur doit contenir au moins une entrée.">
                <%= form.submit class: "btn btn-primary disabled" %>
            </span>
        <% else %>
            <%= form.submit class: "btn btn-primary" %>
        <% end %>
    </p>
<% end %>