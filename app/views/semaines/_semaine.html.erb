<tr id="semaine_<%= semaine.id %>">
    <td><%= semaine.numero_semaine %></td>
    <td><%= semaine.date_lundi %></td>
    <td><%= prenom_nom(semaine.utilisateur) %></td>
    <td><%= semaine.slug %></td>
    <td><%= semaine.note %></td>
    <td>
        <%= link_to " [Show] ", semaine_path(semaine) %>
        <%= link_to " [Edit] ", edit_semaine_path(semaine) %>
        <%= link_to " [Delete] ", semaine_path(semaine), 
            method: :delete,
            remote: true,
            data: { confirm: "Delete #{semaine.numero_semaine} ?" } 
        %>
        <%= link_to " [Jobs] ", "/jobs_semaine/#{semaine.id}" %>
    </td>
</tr>