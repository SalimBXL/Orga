<div class="container">

  <h1>
    <span class="label label-default">
      <i class="material-icons">factory</i>
      Productions
    </span>
  </h1>
  
  <br />

  <div class="row">
  <%= render partial: "/home/barre_menu_production" %>
  </div>

  <br />

  <p><%= link_to "+", new_production_path, class: "btn btn-success" %></p>

  <table class="table table-striped table-hover "> 
    <thead>
      <tr>
        <th>User</th>
        <th>Service</th>
        <th>Quantity</th>
        <th>Unit</th>
        <th>Traceur</th>
        <th>DateTime</th>
        <th>Destination</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @productions.each do |production| %>
        <%= render production %>
      <% end %>
    </tbody>
  </table>
  <p><%= link_to "+", new_production_path, class: "btn btn-success" %></p>
</div>