<div class="container">
    <div class="page-header">
    <h1>
        <span class="label label-warning">
            <i class="material-icons">construction</i>
            <%= I18n.t("tools.check_users.titre").upcase %>
        </span>
    </h1>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>EMAIL</th>
                <th>UTILISATEUR</th>
                <th>CONNECTION</th>
                <th>STATUS</th>
            </tr>
        </thead>
        <tbody>
            <% @emails.sort().each do |email|%>
                <tr>
                    <td><%= email %></td>
                    <td><%= @problemes[email][:utilisateur] %></td>
                    <td><%= @problemes[email][:profile] %></td>
                    <td>
                        <% if @problemes[email][:utilisateur].nil? or @problemes[email][:profile].nil? %>
                            <span style = "color: red">ERROR</span>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<hr>
<div class="container">
    <a href=<%= tools_path %> class="btn btn-info" role="button">
        <<
    </a>
</div>
