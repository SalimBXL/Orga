
<tr id="template_<%= template.id %>" >
    <td>
        <%= template.nom %>
    </td>
    <td>
        <%= template.description %>
    </td>
    <td>
        <%= @services.find(template.service_id).nom %>
    </td>
    <td>
        <div class="btn-group">
            <%= link_to '<i class="material-icons">cancel</i><br>
                Delete'.html_safe, template_path(template), 
                class: "btn btn-danger",
                title: I18n.t("templates.index.delete"),
                method: :delete,
                remote: true, 
                data: { confirm: "Delete #{template.nom} ?" } %>
            <%= link_to '<i class="material-icons">undo</i><br>
                Edit'.html_safe, 
                edit_template_path(template), 
                class: "btn btn-primary",
                title: I18n.t("templates.index.edit") %>
        </div>
    </td>
</tr>