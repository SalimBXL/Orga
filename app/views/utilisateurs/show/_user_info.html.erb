<div class="panel panel-default ">
    <div class="panel-heading">
        <h2>
            <span class="label label-default">
            <i class="material-icons">account_box</i> <%= I18n.t("utilisateurs.show.fiche").capitalize %>
            </span>
        </h2>
    </div>
    <div class="panel-body">
        <p>
            <span class="material-icons">email</span>
            <%= @utilisateur.email %>
        </p>
        <p>
            <span class="material-icons">phone</span>
            <%= @utilisateur.phone %>
        </p>
        <p>
            <span class="material-icons">phone_iphone</span>
            <%= @utilisateur.gsm %>
        </p>
        <p>
            <span class="material-icons">group</span>
            <%= @utilisateur.groupe.nom %>
        </p>
        <p>
            <span class="material-icons">business</span> Primary :
            <%= @utilisateur.service.nom %> (<%= @utilisateur.service.lieu.nom %>)
        </p>

        <% unless (@utilisateur.services.nil? or @utilisateur.services.size < 1) %>
            <p>
                <span class="material-icons">business</span> Secondary :
                <% @utilisateur.services.each do |s| %>
                    <% unless (s == @utilisateur.service) %>
                        <%= s.nom %> (<%= s.lieu.nom %>)
                    <% end %>
                <% end %>
            </p>
        <% end %>
    </div>
    <div class="panel-footer">
        <%= link_to " [#{I18n.t('utilisateurs.show.edit_informations')}] ", 
            edit_utilisateur_path(@utilisateur),
            class: "btn btn-info"
        %>
    </div>
</div>