<% session[:page_aide] = "bug_repports_types" %>

<div class="container">

    <div class="page-header">
        <h1>
            <span class="label label-primary">
                <i class="material-icons">bug_report</i>
                <%= I18n.t("bug_repports.index.titre").upcase %>
            </span>
        </h1>
    </div>

    <% @status_color = [
        ["sync_problem", "info"], 
        ["outlined_flag", "default"], 
        ["check", "success"],
        ["report_problem", "danger"],
        ["flag", "primary"]
    ] %>

    <div class="table-responsive">
        <table class="table">
            <tr align="center">
                <td><h2><span class="label label-<%= @status_color[1][1] %>">
                    <i class="material-icons"><%= @status_color[1][0] %></i>&nbsp;</span>&nbsp;</H2></td>
                <td><h2><span class="label label-<%= @status_color[4][1] %>">
                    <i class="material-icons"><%= @status_color[4][0] %></i></span>&nbsp;</H2></td>
                <td><h2><span class="label label-<%= @status_color[0][1] %>">
                    <i class="material-icons"><%= @status_color[0][0] %></i></span>&nbsp;</H2></td>
                <td><h2><span class="label label-<%= @status_color[3][1] %>">
                    <i class="material-icons"><%= @status_color[3][0] %></i></span>&nbsp;</H2></td>
                <td><h2><span class="label label-<%= @status_color[2][1] %>">
                    <i class="material-icons"><%= @status_color[2][0] %></i></span>&nbsp;</H2></td>
            </tr>
            <tr align="center">
                <td>Waitting</td>
                <td>Working</td>
                <td>Testing</td>
                <td>Problem</td>
                <td>Done</td>
            </tr>
        </table>
    </div>
    <br>

    <p>
        <% if user_signed_in? %>
        <%= link_to '<i class="material-icons">add</i> '.html_safe, 
            new_bug_repport_path,
            class: "btn btn-success btn-xs" %>
        <% end %>
    </p>

    <div id="bug_repports">
        <%= render 'bug_repports' %>
    </div>

    <p>
        <% if user_signed_in? %>
        <%= link_to '<i class="material-icons">add</i> '.html_safe, 
            new_bug_repport_path,
            class: "btn btn-success btn-xs" %>
        <% end %>
    </p>
    
</div>