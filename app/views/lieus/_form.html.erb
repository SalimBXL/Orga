<%= form_with model: @lieu, local: true do |form| %>

    <% if @lieu.errors.any? %>
        <strong>WARNING</strong>
        <ul>
            <% @lieu.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <!-- Nom -->
    <p>
        <%= form.label :nom %><br>
        <%= form.text_field :nom %>
    </p>

    <!-- Adresse -->
    <p>
        <%= form.label :adresse %><br>
        <%= form.text_field :adresse %>
    </p>

    <!-- Téléphone -->
    <p>
        <%= form.label :phone %><br>
        <%= form.text_field :phone %>
    </p>

    <!-- Note -->
    <p>
        <%= form.label :note %><br>
        <%= form.text_field :note %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>