<% session[:page_aide] = "locations_services" %>

<div class="page-header">
    <h1>
        <span class="label label-primary">
            <i class="material-icons">location_city</i>
            <%= I18n.t("lieus.index.titre").upcase %>
        </span>
    </h1>
</div>

<p>
    <%= I18n.t("lieus.index.description") %>
</p>

<div class="container">
    <p>
        <% if user_signed_in? && is_super_admin? %>
        <%= link_to '<i class="material-icons">add_location</i> '.html_safe, 
            new_lieu_path,
            class: "btn btn-success btn-xs" %>
        <% end %>
    </p>
    <div class="row" id="lieus">
        <%= render 'lieus' %>
    </div>
    <p>
        <% if user_signed_in? && is_super_admin? %>
        <%= link_to '<i class="material-icons">add_location</i> '.html_safe, 
            new_lieu_path,
            class: "btn btn-success btn-xs" %>
        <% end %>
    </p>
</div>