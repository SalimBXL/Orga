
<% last_service = nil %>
<% last_groupe = nil %>
<% last_utilisateur = nil %>

<% @specific_day_jours.each do |specific_day_jour| %>

    <% if specific_day_jour.service.nom != last_service %>
        <% last_service = specific_day_jour.service.nom %>
        <div class="row">
        <div class="col-sm-12">
            <h3 class="well">
                <i class="material-icons">business</i>
                <%= specific_day_jour.service.nom.upcase %></span>
            </h3>
            </div>
        </div>
    <% end %>
    


    <% if specific_day_jour.utilisateur.prenom_nom != last_utilisateur %>
        <% last_utilisateur = specific_day_jour.utilisateur.prenom_nom %>
        <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong><i class="material-icons">account_circle</i>  <%= specific_day_jour.utilisateur.prenom_nom %></strong>
                 (<%= specific_day_jour.utilisateur.phone %>)
            </div>
            <div class="panel-body">
                <p>
                    <span class="label label-primary">AM</span>
                    &nbsp;&nbsp;&nbsp;
                    <% unless specific_day_jour.am_pm %>
                        <% @specific_day_works[specific_day_jour].each do |wl| %>
                            <span class="badge" 
                                data-toggle="tooltip" 
                                title='<%= "#{wl.work.nom}" %>'
                            >
                                <%= wl.work.code %>
                            </span>
                        <% end %>
                    <% else %>
                        ---
                    <% end %>
                    <br>
                    <span class="label label-info">PM</span>
                    &nbsp;&nbsp;&nbsp;
                    <% if specific_day_jour.am_pm %>
                        <% @specific_day_works[specific_day_jour].each do |wl| %>
                            <% cl = "" %>
                            <% if wl.work.code.downcase=="qc" && @date.cwday==5 %>
                                <% cl = "keep_attention" %>
                            <% end %>
                            <span class="badge <%= cl %>"><%= wl.work.code %></span>
                        <% end %>
                    <% else %>
                        ---
                    <% end %>
                </p>
                <p>
                    <%= specific_day_jour.note %>
                </p>
            </div>
        </div>
        </div>
    <% end %>

<% end %>

