<tr>
    <td class="nom_utilisateur"></td>
    <% ((@date2-@date).to_i).times do |i| %>
        <% if (@date + i.day).wday!=0 %>
            <% if (@date + i.day).wday==6 %> 
                <!-- WEEKEND -->                       
                <td class="weekend">
                    <% unless @events[service.id].nil? %>
                        <% @events[service.id].each do |event| %>
                            <% if event.date == (@date+ i.day) %>
                                <br>
                                <h5>
                                <span class="label label-info"
                                    data-toggle="tooltip"
                                    title="<%= "#{event.nom.capitalize} #{event.note}" %>">
                                    (*)
                                </span>
                                </h5>
                            <% end %>
                        <% end %>
                    <% end %>
                
                </td>
            <% else %>
                <!-- JOUR DE SEMAINE -->
                <td class="normal">
                    <!-- NumÃ©ro du jour -->
                    <%= (@date + i.day).day %>
                    
                    <!-- EVENTS -->
                    <% unless @events[service.id].nil? %>
                        <% @events[service.id].each do |event| %>
                            <% if event.date == (@date+ i.day) %>
                                <br>
                                <i class="material-icons"
                                    data-toggle="tooltip" 
                                    title="<%= "#{event.nom.capitalize} #{event.note}" %>"
                                >error_outline</i>
                            <% end %>
                        <% end %>
                    <% end %>
                </td>
            <% end %>
        <% end %>
    <% end %>
</tr>