<div class="container">
    <h1>
        <%= @blog_message.title.capitalize %>
    </h1>
    <p>
        <h3>Dates</h3>
        <strong>Date :</strong> <%= @blog_message.date %> (Created at : <%= @blog_message.created_at %> / Updated at : <%= @blog_message.updated_at %>)<br>
        <strong>Created at :</strong> <%= @blog_message.created_at %> / Updated at : <%= @blog_message.updated_at %><br>
        <strong>Updated at :</strong> <%= @blog_message.created_at %> / Updated at : <%= @blog_message.updated_at %>
    </p>

    <p>
        <h3>Keywords</h3>
        <strong>Category :</strong> <%= @blog_message.blog_category_id %><br>
        <strong>Service :</strong> <%= @blog_message.service_id %><br>
        <strong>Groupe :</strong> <%= @blog_message.groupe %><br>
        <strong>Classe :</strong> <%= @blog_message.classe %>
    </p>
    <p>
        <h3>Article</h3>
        <strong>Title :</strong> <%= @blog_message.title.capitalize %><br>
        <strong>Description :</strong> <%= @blog_message.description %><br>
        <strong>User :</strong> <%= @blog_message.utilisateur_id %>
    </p>

    <p>
        <a href="<%= blog_messages_path %>" class="btn btn-primary btn-xs" role="button">Back to Articles</a>
        <a href="<%= edit_blog_message_path(@blog_message) %>" class="btn btn-info btn-xs" role="button">Edit Article</a>
    </p>
</div>